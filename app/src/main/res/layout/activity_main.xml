        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="@+id/imageSecondPerfil"
        app:layout_constraintTop_toBottomOf="@+id/imageSecondPerfil"
        app:layout_constraintVertical_bias="0.2" />

